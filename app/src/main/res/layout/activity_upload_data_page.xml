<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEEFD"
    tools:context=".UploadDataPage"
    android:padding="30sp">

    <LinearLayout
        android:id="@+id/boxUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="15sp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:clickable="true"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Data"
            android:textColor="#F25765"
            android:textSize="24sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/boxUpload"
        android:layout_marginTop="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="> Upload your identity card"></TextView>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/identityCard"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                app:strokeWidth="5sp"
                app:strokeColor="#191D40"></com.google.android.material.imageview.ShapeableImageView>

            <Button
                android:id="@+id/bIdentityCard"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="Upload"
                android:backgroundTint="#F25765"></Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="> Upload selfie with your identity card"></TextView>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/selfie"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                app:strokeWidth="5sp"
                app:strokeColor="#191D40"></com.google.android.material.imageview.ShapeableImageView>

            <Button
                android:id="@+id/bSelfie"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="Upload"
                android:backgroundTint="#F25765"></Button>

            <EditText
                android:layout_marginTop="20sp"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name according to identity card"></EditText>

            <EditText
                android:id="@+id/nik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NIK"></EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="> Upload Bank account's book"></TextView>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/bankAccount"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                app:strokeWidth="5sp"
                app:strokeColor="#191D40"></com.google.android.material.imageview.ShapeableImageView>


            <Button
                android:id="@+id/bBankAccount"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="Upload"
                android:backgroundTint="#F25765"></Button>


            <EditText
                android:id="@+id/accountNumber"
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Account Number"></EditText>

            <EditText
                android:id="@+id/bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bank"></EditText>

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="Submit"
                android:backgroundTint="#F25765"></Button>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>