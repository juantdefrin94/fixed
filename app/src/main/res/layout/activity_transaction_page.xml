<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionPage"
    android:background="#ECEEFD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="28sp"
        android:layout_marginTop="28sp"
        android:layout_marginEnd="28sp"
        android:layout_marginBottom="28sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backTransaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:clickable="true"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction"
                android:textColor="#F25765"
                android:textSize="24sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/dateTimeTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="BOOKING DATE AND TIME"
            android:textColor="#2D305B"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="CUSTOMER DETAILS"
            android:textColor="#F25765"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Name"
                android:textColor="#2D305B"></TextView>

            <TextView
                android:id="@+id/customerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:text="Customer Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Address"
                android:textColor="#2D305B"></TextView>

            <TextView
                android:id="@+id/customerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:text="Customer Address" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Phone Number"
                android:textColor="#2D305B"></TextView>

            <TextView
                android:id="@+id/customerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:text="Customer Phone Number" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="*Please check the data, if there is a change please change it on the profile page"
            android:textColor="#F25765"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="SERVICER DETAILS"
            android:textColor="#F25765"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Name"
                android:textColor="#2D305B"></TextView>

            <TextView
                android:id="@+id/servicerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:text="Customer Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Phone Number"
                android:textColor="#2D305B"></TextView>

            <TextView
                android:id="@+id/servicerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:text="Customer Phone Number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Category"
                android:textColor="#2D305B"></TextView>

            <TextView
                android:id="@+id/servicerCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:text="Servicer Category" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="*You can contact your servicer at the existing phone number"
            android:textColor="#F25765" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="PRICE DETAILS"
            android:textColor="#F25765"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Fee Service"
                android:textColor="#2D305B"></TextView>

            <TextView
                android:id="@+id/servicerFee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:text="Servicer Fee" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Additional Cost"
                android:textColor="#2D305B"></TextView>

            <TextView
                android:id="@+id/servicerCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:text="Rp20000" />
        </LinearLayout>

        <TextView
            android:id="@+id/totalCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="TOTAL"
            android:textColor="#2D305B"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <Button
        android:id="@+id/bOrder"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28sp"
        android:layout_marginTop="28sp"
        android:layout_marginEnd="28sp"
        android:layout_marginBottom="28sp"
        android:backgroundTint="#F25765"
        android:onClick="processOrder"
        android:text="Process Order"></Button>

</RelativeLayout>