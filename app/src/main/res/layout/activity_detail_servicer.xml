<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailServicer"
    android:background="#ECEEFD"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/boxDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECEEFD"
        android:layout_marginTop="28sp"
        android:layout_marginLeft="28sp"
        android:layout_marginRight="28sp">

        <ImageView
            android:id="@+id/backDetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15sp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:clickable="true"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textColor="#F25765"
            android:textSize="24sp"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/boxDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="28sp"
        android:layout_marginRight="28sp"
        android:orientation="vertical">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/photoDetail"
            android:layout_width="match_parent"
            android:layout_height="180sp"
            app:strokeWidth="3px"
            app:strokeColor="#191D40">
        </com.google.android.material.imageview.ShapeableImageView>
        <TextView
            android:id="@+id/nameDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="22sp"
            android:layout_marginTop="10sp">
        </TextView>
        <TextView
            android:id="@+id/categoryDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="16sp">
        </TextView>
        <TextView
            android:id="@+id/priceDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textStyle="bold"
            android:textSize="22sp">
        </TextView>
        <TextView
            android:id="@+id/ratingDetail"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textSize="16sp">
        </TextView>
        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textStyle="bold"
            android:textSize="16sp">
        </TextView>
        <TextView
            android:id="@+id/descriptionDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="16sp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20sp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/bFavorite"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:text="Add to favorite"
            android:backgroundTint="#191D40">
        </Button>
        <Button
            android:id="@+id/bBook"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:text="Book and choose schedule"
            android:backgroundTint="#F25765">
        </Button>
    </LinearLayout>
</RelativeLayout>